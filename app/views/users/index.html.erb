
<div class="video-container home-page">
  <video autoplay muted loop class="video-bg">
    <source src="<%= asset_path('back2.mp4') %>" type="video/mp4">
    <!-- Include additional source tags for other video formats if needed -->
    Your browser does not support the video tag.
  </video>
</div>
<div class="content">
  <h1>Users</h1>
  <table class="table table-striped table-bordered table-hover">
    <thead class="thead-light">
    <tr>
      <th>Name</th>
      <th>Female</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%=user.first_name %></td>
        <td><%=user.last_name %></td>
        <td><%= user.email %></td>
        <td>
          <%= link_to 'Show', user, class: 'link-button' %>
          <%= button_to "Destroy this user", user, method: :delete, class: 'cancel-button', data: { confirm: "Are you sure?" } %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <%= link_to 'New User', new_user_path, class: 'btn btn-primary btn-lg' %>
</div>