<!-- app/views/users/index.html.erb -->

<div class="container mt-5">
  <h1 class="mb-4">Users</h1>
  <table class="table table-striped table-bordered table-hover">
    <thead class="thead-light">
    <tr>
      <th>Name</th>
      <th>Female</th>
      <th>Email</th>
    </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%=user.first_name %></td>
        <td><%=user.last_name %></td>
        <td><%= user.email %></td>
        <td>
          <%= link_to 'Show', user, class: 'btn btn-info btn-sm mr-1 mb-1' %>
          <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-warning btn-sm mr-1 mb-1' %>
          <%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm mb-1' %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <%= link_to 'New User', new_user_path, class: 'btn btn-primary btn-lg' %>
</div>
