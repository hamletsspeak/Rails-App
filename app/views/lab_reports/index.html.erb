<!-- app/views/lab_reports/index.html.erb -->
<div class="container mt-5">
  <h1 class="mb-4">Отчёты</h1>
  <table class="table table-striped table-bordered table-hover">
    <thead class="thead-light">
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Description</th>
      <th>Grade</th>
      <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    <% @lab_reports.each do |lab_report| %>
      <tr>
        <td><%= lab_report.user_id %></td>
        <td><%= lab_report.title %></td>
        <td><%= lab_report.description %></td>
        <td><%= lab_report.grade %></td>
        <td>
          <%= link_to 'Show', lab_report, class: 'btn btn-info btn-sm mr-1 mb-1' %>
          <%= link_to 'Edit', edit_lab_report_path(lab_report), class: 'btn btn-warning btn-sm mr-1 mb-1' %>
          <%= link_to 'Delete', lab_report, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm mb-1' %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <%= link_to 'New Lab Report', new_lab_report_path, class: 'btn btn-primary btn-lg' %>
</div>
